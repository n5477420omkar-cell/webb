<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Syllabus Playlists</title>
    <link rel="stylesheet" href="/static/style.css" />
  </head>
  <body>
    <header><h1>Syllabus-aligned Playlists</h1></header>
    <main>
      <% if (lists.length === 0) { %>
        <p>No curated playlists yet.</p>
      <% } %>
      <% lists.forEach(l => { %>
        <div class="playlist"><h3><a href="/playlists/<%= l.id %>"><%= l.name %></a></h3><p><%= l.description %></p></div>
      <% }) %>
    </main>
  </body>
</html>
