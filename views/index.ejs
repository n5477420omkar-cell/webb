<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>KLH Peer Learning</title>
    <link rel="stylesheet" href="/static/style.css" />
  </head>
  <body>
    <header>
      <h1>KLH Peer Learning Network</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/playlists">Playlists</a>
        <a href="/syllabus-playlists">Syllabus Playlists</a>
        <% if (user) { %>
          <a href="/upload">Upload</a>
          <a href="/logout">Logout (<%= user.name || user.email %>)</a>
        <% } else { %>
          <a href="/login">Login</a>
          <a href="/register">Register</a>
        <% } %>
      </nav>
    </header>

    <main>
      <section class="videos">
        <% if (videos.length === 0) { %>
          <p>No videos yet. Be the first to <a href="/upload">upload</a>!</p>
        <% } %>
        <% videos.forEach(v => { %>
          <article class="video-card">
            <h2><a href="/video/<%= v.id %>"><%= v.title %></a></h2>
            <p><%= v.description ? (v.description.length > 180 ? v.description.substring(0,180)+'...' : v.description) : '' %></p>
            <p class="meta">Subject: <%= v.subject %> â€¢ Tags: <%= v.tags %></p>
          </article>
        <% }) %>
      </section>
    </main>
  </body>
</html>
